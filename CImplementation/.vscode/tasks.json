{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C custom build",
            "command": "/usr/bin/gcc", // Update this path if necessary
            "args": [
                "-fdiagnostics-color=always",
                "-g", // Include debugging symbols
                "${file}", // Source file
                "-o", // Output flag
                "${fileDirname}/${fileBasenameNoExtension}" // Output executable
            ],
            "options": {
                "cwd": "${fileDirname}" // Set working directory
            },
            "problemMatcher": [
                "$gcc" // Match GCC errors/warnings
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Set as the default build task
            },
            "detail": "Task generated by Debugger."
        }
    ]
}